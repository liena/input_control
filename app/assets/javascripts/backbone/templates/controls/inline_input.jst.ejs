<div class="info-section">
	<label for="name-selection-list">joe: </label>
	<select class="value-options hide" id="name-selection-list" name="name-selection-list">
		<% _.each(this.model.nameOptions.attributes, function(value){ %>
			<option value=<%= value %>
				<% if(value == foo.get("name")){ %>
					selected="selected"
				<% } %>>
				<%= value %>
			</option>
		<% }); %>
	</select>
	<label class="current-selection">Unset</label>
</div>
